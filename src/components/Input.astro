---
const {type='text', isRequired=false, isHidden=false, placeholder='', id=''} = Astro.props
---

<input id={id} type={type} placeholder={placeholder} required={isRequired} hidden={isHidden}>

<style>
  input{
		width: 100%;
		font: inherit;
		background-color: var(--neutral-dark);
		padding: 14px 16px 14px 16px;
		border: none;
		border-radius: 12px;
		accent-color: var(--accent);
		color: inherit;
	}

	input:focus{
		outline: 1px solid var(--accent);
		caret-color: var(--neutral-light);
	}

	input::placeholder {
    color: var(--neutral-medium); /* Cambia este valor al color que desees */
  }

	/* input[type="text"]{
		margin-bottom: 24px;
	} */

	input[type="checkbox"]{
		width: 16px;
		height: 16px;
		background-color: var(--neutral-medium);
	}
</style>